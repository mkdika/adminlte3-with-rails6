<% if flash[:notice] %>
  <div class="alert alert-primary alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <h5><i class="icon fas fa-info"></i>Info</h5>
    <%= notice %>
  </div>
<% end %>

<div class="card card-secondary">
  <div class="card-header">
    <h3 class="card-title">Person #<%= @person.id %></h3>
  </div>
  <div class="col-12">
    <div class="table-responsive">
      <table class="table">
        <tbody><tr>
          <th>First Name:</th>
          <td><%= @person.first_name %></td>
        </tr>
        <tr>
          <th>Last Name</th>
          <td><%= @person.last_name %></td>
        </tr>
        <tr>
          <th>Birth Date</th>
          <td><%= @person.birth_date&.strftime("%d %b %Y") %></td>
        </tr>
        <tr>
          <th>Gender</th>
          <td><%= @person.gender.upcase %></td>
        </tr>
        <tr>
          <th>Height <small>(Cm)</small></th>
          <td><%= @person.height %></td>
        </tr>
        <tr>
          <th>Weight <small>(Kg)</small></th>
          <td><%= @person.weight %></td>
        </tr>
        <tr>
          <th>Description</th>
          <td><%= @person.description %></td>
        </tr>
        <tr>
          <th>Activation</th>
          <td><b><%= @person.activation.to_s.upcase %></b></td>
        </tr>
      </tbody></table>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_person_path(@person), class: "btn btn-warning" %>
<%= link_to 'Back', people_path, class: "btn btn-default" %>
