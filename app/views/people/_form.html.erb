
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body p-0">
        <%= form_with(model: person, local: true) do |form| %>
          <div class="card-body">

            <div class="form-group">
              <label for="firstName">
                <%= form.label :first_name %>
              </label>
              <%= form.text_field :first_name, class: "form-control", id: "firstName" %>
            </div>

            <div class="form-group">
              <label for="lastName">
                <%= form.label :last_name %>
              </label>
              <%= form.text_field :last_name, class: "form-control", id: "lastName" %>
            </div>

            <div class="form-group">
              <label for="birthDate">
                <%= form.label :birth_date %>
              </label>
              <%= form.date_field(:birth_date, class: "form-control") %>
            </div>

            <div class="form-group">
              <label for="gender">
                <%= form.label :gender %>
              </label>
              <%= form.select(:gender, Person.genders, {:include_blank => false}, {:class => "custom-select form-control"}) %>
            </div>

            <div class="form-group">
              <label for="height">
                Height <small>(Cm)</small>
              </label>
              <%= form.number_field :height, {class: "form-control", id: "height"} %>
            </div>

            <div class="form-group">
              <label for="weight">
                Weight <small>(Kg)</small>
              </label>
              <%= form.number_field :weight, {class: "form-control", id: "weight"} %>
            </div>

            <div class="form-group">
              <label for="description">
                <%= form.label :description %>
              </label>
              <%= form.text_area(:description, size: "24x6", class: "form-control") %>
            </div>

            <div class="form-group">
              <label for="activation">
                <%= form.label :activation %>
              </label>
              <div class="custom-control custom-switch">
                <%= form.check_box(:activation, class: "custom-control-input", id: "customSwitch1") %>
                <label class="custom-control-label" for="customSwitch1"></label>
              </div>
            </div>

          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <%= link_to 'Cancel', people_path, class: "btn btn-default float-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
